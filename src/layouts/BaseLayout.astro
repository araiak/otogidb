    <script>
      // Theme toggle - explicitly saves user choice to override system preference
      const themeToggle = document.getElementById('theme-toggle');
      if (themeToggle) {
        themeToggle.addEventListener('click', () => {
          const isDark = document.documentElement.classList.contains('dark');
          const newTheme = isDark ? 'light' : 'dark';
          const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

          // Save explicit user choice
          localStorage.setItem('otogidb-theme', newTheme);

          // Apply immediately
          if (newTheme === 'dark') {
            document.documentElement.classList.add('dark');
            document.documentElement.classList.remove('light-override');
          } else {
            document.documentElement.classList.remove('dark');
            // If system prefers dark, add override class to prevent CSS media query from applying
            if (systemPrefersDark) {
              document.documentElement.classList.add('light-override');
            }
          }
        });
      }

      // Mobile menu toggle
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      if (mobileMenuToggle && mobileMenu) {
        mobileMenuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Listen for system preference changes (only if user hasn't explicitly chosen)
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        const stored = localStorage.getItem('otogidb-theme');
        if (!stored || stored === 'system') {
          if (e.matches) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        }
      });

      // Language switcher
      const langToggle = document.getElementById('lang-toggle');
      const langDropdown = document.getElementById('lang-dropdown');
      const langSwitcher = document.getElementById('lang-switcher');

      const SUPPORTED_LOCALES = ['en', 'ja', 'ko', 'zh-cn', 'zh-tw', 'es'];
      const LOCALE_STORAGE_KEY = 'otogidb-locale';

      // Get effective locale (what's actually being used for data)
      function getEffectiveLocale(): string {
        // 1. Check URL path first
        const pathMatch = location.pathname.match(/^\/([a-z]{2}(?:-[a-z]{2})?)(\/|$)/);
        if (pathMatch && SUPPORTED_LOCALES.includes(pathMatch[1])) {
          return pathMatch[1];
        }

        // 2. Check stored preference
        const stored = localStorage.getItem(LOCALE_STORAGE_KEY);
        if (stored && SUPPORTED_LOCALES.includes(stored)) {
          return stored;
        }

        // 3. Default to English
        return 'en';
      }

      // Update dropdown button and active state to reflect actual locale
      function syncDropdownWithLocale(locale: string) {
        if (langToggle) {
          // Show short code for Chinese variants
          const displayCode = locale.startsWith('zh-') ? 'ZH' : locale.toUpperCase();
          langToggle.textContent = displayCode;
        }

        // Update active state in dropdown
        if (langDropdown) {
          langDropdown.querySelectorAll('a[data-locale]').forEach((link) => {
            const linkLocale = (link as HTMLElement).dataset.locale;
            if (linkLocale === locale) {
              link.classList.add('font-medium');
              (link as HTMLElement).style.color = 'var(--color-accent)';
            } else {
              link.classList.remove('font-medium');
              (link as HTMLElement).style.color = '';
            }
          });
        }
      }

      if (langToggle && langDropdown && langSwitcher) {
        // Sync dropdown on page load
        syncDropdownWithLocale(getEffectiveLocale());

        langToggle.addEventListener('click', (e) => {
          e.stopPropagation();
          langDropdown.classList.toggle('hidden');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
          if (!langSwitcher.contains(e.target as Node)) {
            langDropdown.classList.add('hidden');
          }
        });

        // Handle language selection - save preference then allow navigation
        langDropdown.querySelectorAll('a[data-locale]').forEach((link) => {
          link.addEventListener('click', () => {
            const locale = (link as HTMLElement).dataset.locale;
            if (locale) {
              // Save explicit locale choice before navigation
              localStorage.setItem('otogidb-locale', locale);
              // Navigation happens via the <a> href - no need to prevent default
            }
          });
        });
      }

      // Register Service Worker for image caching (reduces Cloudinary bandwidth)
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js').catch((error) => {
          console.warn('SW registration failed:', error);
        });
      }
    </script>
  </body>
</html>
