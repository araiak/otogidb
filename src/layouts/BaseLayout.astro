---
import '../styles/global.css';
import { themeInitScript } from '../lib/theme';
import { localeInitScript, extractLocaleFromPath, LOCALE_NAMES, SUPPORTED_LOCALES, getPathInLocale } from '../lib/i18n';
import DebugPanel from '../components/DebugPanel';
import SEO from '../components/SEO.astro';
import { getPlaceholderMascot } from '../lib/images';

const mascotUrl = getPlaceholderMascot();

// Read data version at build time for cache busting
import cardsData from '../../public/data/cards.json';
const dataVersion = cardsData.version || Date.now().toString();

// Detect current locale from URL path
const currentPath = Astro.url.pathname;
const currentLocale = extractLocaleFromPath(currentPath);

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  lang?: string;
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    tags?: string[];
  };
}

const {
  title,
  description = 'Otogi Spirit Agents Card Database - Complete card stats, skills, and abilities',
  image,
  type = 'website',
  lang = currentLocale,
  article,
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | OtogiDB</title>

    <!-- SEO: Open Graph, Twitter Cards, Canonical -->
    <SEO title={title} description={description} image={image} type={type} article={article} />

    <!-- Prevent flash of wrong theme -->
    <script is:inline set:html={themeInitScript} />

    <!-- Locale detection (soft default from browser) -->
    <script is:inline set:html={localeInitScript} />

    <!-- Data version for cache busting -->
    <script is:inline define:vars={{ dataVersion }}>
      window.OTOGIDB_DATA_VERSION = dataVersion;
    </script>

    <!-- Preconnect to Cloudinary for faster image loading -->
    <link rel="preconnect" href="https://res.cloudinary.com" />
    <link rel="dns-prefetch" href="https://res.cloudinary.com" />
  </head>
  <body class="min-h-screen flex flex-col" style="background-color: var(--color-bg); color: var(--color-text);">
    <header class="sticky top-0 z-40 border-b" style="background-color: var(--color-header); border-color: var(--color-border);">
      <div class="container mx-auto px-4">
        <nav class="flex items-center justify-between h-14 md:h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2 font-bold text-lg" style="color: var(--color-text);">
            <span>OtogiDB</span>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-6">
            <a href="/" class="link hover:no-underline">Cards</a>
            <a href="/updates" class="link hover:no-underline">Updates</a>
            <a href="/blog" class="link hover:no-underline">Blog</a>
          </div>

          <!-- Language Switcher, Theme Toggle & Mobile Menu -->
          <div class="flex items-center gap-2">
            <!-- Language Switcher -->
            <div class="relative" id="lang-switcher">
              <button
                id="lang-toggle"
                class="btn-secondary px-2 py-1 rounded-md text-xs font-medium uppercase touch-target"
                aria-label="Change language"
              >
                {currentLocale.toUpperCase()}
              </button>
              <div id="lang-dropdown" class="hidden absolute right-0 mt-1 py-1 rounded-md shadow-lg z-50" style="background-color: var(--color-header); border: 1px solid var(--color-border); min-width: 100px;">
                {SUPPORTED_LOCALES.map((locale) => (
                  <a
                    href={getPathInLocale(currentPath, locale)}
                    class={`block px-3 py-1.5 text-sm hover:bg-white/10 ${locale === currentLocale ? 'font-medium' : ''}`}
                    style={locale === currentLocale ? 'color: var(--color-accent);' : ''}
                    data-locale={locale}
                  >
                    {LOCALE_NAMES[locale]}
                  </a>
                ))}
              </div>
            </div>

            <button
              id="theme-toggle"
              class="btn-secondary p-2 rounded-md touch-target"
              aria-label="Toggle theme"
            >
              <!-- Sun icon (shown in dark mode) -->
              <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <!-- Moon icon (shown in light mode) -->
              <svg class="w-5 h-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </button>

            <!-- Mobile menu button -->
            <button
              id="mobile-menu-toggle"
              class="md:hidden btn-secondary p-2 rounded-md touch-target"
              aria-label="Toggle menu"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </nav>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col gap-2">
            <a href="/" class="link py-2 touch-target">Cards</a>
            <a href="/updates" class="link py-2 touch-target">Updates</a>
            <a href="/blog" class="link py-2 touch-target">Blog</a>
          </div>
        </div>
      </div>
    </header>

    <!-- WIP Banner -->
    <div id="wip-banner" class="border-b" style="background: linear-gradient(90deg, rgba(234, 179, 8, 0.1) 0%, rgba(234, 179, 8, 0.05) 100%); border-color: rgba(234, 179, 8, 0.3);">
      <div class="container mx-auto px-4 py-2">
        <div class="flex items-center justify-between gap-3">
          <div class="flex items-center gap-3">
            <img src={mascotUrl} alt="Sola" class="w-8 h-8 flex-shrink-0" />
            <p class="text-sm" style="color: var(--color-text);">
              <span class="font-medium" style="color: rgb(234, 179, 8);">Master!</span>
              We're still setting things up~ Please forgive any little bugs you find!
            </p>
          </div>
          <button
            id="wip-dismiss"
            class="flex-shrink-0 p-1 rounded hover:bg-black/10 dark:hover:bg-white/10 transition-colors"
            aria-label="Dismiss banner"
          >
            <svg class="w-4 h-4" style="color: var(--color-text-secondary);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <main class="flex-1" style="background-color: var(--color-bg);">
      <slot />
    </main>

    <footer class="border-t py-6 mt-8" style="border-color: var(--color-border); background-color: var(--color-header);">
      <div class="container mx-auto px-4 text-center text-sm" style="color: var(--color-text-secondary);">
        <p class="mb-3">OtogiDB - Otogi Spirit Agents Card Database</p>

        <!-- App Store Links -->
        <p class="mb-3">
          <span class="text-xs uppercase tracking-wide" style="color: var(--color-text-secondary);">Get Otogi:</span>
          <a href="https://play.google.com/store/apps/details?id=com.xgwgame.otogiprod&hl=en" class="link ml-2" target="_blank" rel="noopener noreferrer">
            <span class="inline-flex items-center gap-1">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"/>
              </svg>
              Android
            </span>
          </a>
          <span class="mx-2">·</span>
          <a href="https://apps.apple.com/us/app/otogi/id1619663875" class="link" target="_blank" rel="noopener noreferrer">
            <span class="inline-flex items-center gap-1">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              iPhone
            </span>
          </a>
        </p>

        <p>
          <a href="https://github.com/araiak/otogidb" class="link" target="_blank" rel="noopener noreferrer">
            <span class="inline-flex items-center gap-1">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              GitHub
            </span>
          </a>
          <span class="mx-2">·</span>
          <a href="https://github.com/araiak/otogidb/issues" class="link" target="_blank" rel="noopener noreferrer">Report Issue</a>
        </p>
      </div>
    </footer>

    <!-- Debug Panel (toggles with Ctrl+Shift+D) -->
    <DebugPanel client:load />

    <script>
      // Theme toggle - explicitly saves user choice to override system preference
      const themeToggle = document.getElementById('theme-toggle');
      if (themeToggle) {
        themeToggle.addEventListener('click', () => {
          const isDark = document.documentElement.classList.contains('dark');
          const newTheme = isDark ? 'light' : 'dark';

          // Save explicit user choice
          localStorage.setItem('otogidb-theme', newTheme);

          // Apply immediately
          if (newTheme === 'dark') {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        });
      }

      // Mobile menu toggle
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      if (mobileMenuToggle && mobileMenu) {
        mobileMenuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Listen for system preference changes (only if user hasn't explicitly chosen)
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        const stored = localStorage.getItem('otogidb-theme');
        if (!stored || stored === 'system') {
          if (e.matches) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        }
      });

      // WIP Banner dismiss
      const wipBanner = document.getElementById('wip-banner');
      const wipDismiss = document.getElementById('wip-dismiss');
      if (wipBanner && wipDismiss) {
        // Check if already dismissed
        if (localStorage.getItem('otogidb-wip-dismissed') === '1') {
          wipBanner.style.display = 'none';
        }
        wipDismiss.addEventListener('click', () => {
          wipBanner.style.display = 'none';
          localStorage.setItem('otogidb-wip-dismissed', '1');
        });
      }

      // Language switcher
      const langToggle = document.getElementById('lang-toggle');
      const langDropdown = document.getElementById('lang-dropdown');
      const langSwitcher = document.getElementById('lang-switcher');

      const SUPPORTED_LOCALES = ['en', 'ja', 'ko', 'zh-cn', 'zh-tw', 'es'];
      const LOCALE_STORAGE_KEY = 'otogidb-locale';

      // Get effective locale (what's actually being used for data)
      function getEffectiveLocale(): string {
        // 1. Check URL path first
        const pathMatch = location.pathname.match(/^\/([a-z]{2}(?:-[a-z]{2})?)(\/|$)/);
        if (pathMatch && SUPPORTED_LOCALES.includes(pathMatch[1])) {
          return pathMatch[1];
        }

        // 2. Check stored preference
        const stored = localStorage.getItem(LOCALE_STORAGE_KEY);
        if (stored && SUPPORTED_LOCALES.includes(stored)) {
          return stored;
        }

        // 3. Default to English
        return 'en';
      }

      // Update dropdown button and active state to reflect actual locale
      function syncDropdownWithLocale(locale: string) {
        if (langToggle) {
          // Show short code for Chinese variants
          const displayCode = locale.startsWith('zh-') ? 'ZH' : locale.toUpperCase();
          langToggle.textContent = displayCode;
        }

        // Update active state in dropdown
        if (langDropdown) {
          langDropdown.querySelectorAll('a[data-locale]').forEach((link) => {
            const linkLocale = (link as HTMLElement).dataset.locale;
            if (linkLocale === locale) {
              link.classList.add('font-medium');
              (link as HTMLElement).style.color = 'var(--color-accent)';
            } else {
              link.classList.remove('font-medium');
              (link as HTMLElement).style.color = '';
            }
          });
        }
      }

      if (langToggle && langDropdown && langSwitcher) {
        // Sync dropdown on page load
        syncDropdownWithLocale(getEffectiveLocale());

        langToggle.addEventListener('click', (e) => {
          e.stopPropagation();
          langDropdown.classList.toggle('hidden');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
          if (!langSwitcher.contains(e.target as Node)) {
            langDropdown.classList.add('hidden');
          }
        });

        // Handle language selection
        langDropdown.querySelectorAll('a[data-locale]').forEach((link) => {
          link.addEventListener('click', (e) => {
            const locale = (link as HTMLElement).dataset.locale;
            if (locale) {
              // Save explicit locale choice
              localStorage.setItem('otogidb-locale', locale);

              // Dispatch custom event for same-tab components (like CardTable)
              window.dispatchEvent(new CustomEvent('otogidb-locale-change', {
                detail: { locale }
              }));

              // On pages without locale in URL, prevent navigation and update in-place
              const currentPath = window.location.pathname;
              const isRootPath = currentPath === '/' || SUPPORTED_LOCALES.some(l => currentPath === `/${l}` || currentPath === `/${l}/`);
              const isUpdatesPage = currentPath === '/updates' || currentPath === '/updates/';
              const isBlogPage = currentPath.startsWith('/blog');

              if (isRootPath || isUpdatesPage || isBlogPage) {
                e.preventDefault();
                langDropdown.classList.add('hidden');
                // Update the dropdown to reflect new locale
                syncDropdownWithLocale(locale);
              }
              // For card detail pages, allow normal navigation to locale-specific URL
            }
          });
        });
      }
    </script>
  </body>
</html>
