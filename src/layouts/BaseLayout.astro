    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <!-- Color scheme hint for browsers (scrollbars, form elements) -->
    <meta name="color-scheme" content="light dark" />
    <!-- Favicons from Cloudinary-transformed card image -->
    <link rel="icon" type="image/png" sizes="32x32" href={favicon32} />
    <link rel="icon" type="image/png" sizes="16x16" href={favicon16} />
    <link rel="apple-touch-icon" sizes="180x180" href={appleIcon} />
    <title>{title} | OtogiDB</title>

    <!-- SEO: Open Graph, Twitter Cards, Canonical, Hreflang -->
    <SEO title={title} description={description} image={image} type={type} locale={currentLocale} hasLocalizedUrls={hasLocalizedUrls} article={article} />


    <!-- Prevent flash of wrong theme -->
    <script is:inline set:html={themeInitScript} />

    <!-- Locale detection (soft default from browser) -->
    <script is:inline set:html={localeInitScript} />

    <!-- Dev-only features: hide on production, show on dev environments -->
    <script is:inline>
      (function() {
        var host = location.hostname;
        var search = location.search;
        var isDev = (
          host === 'localhost' ||
          host === '127.0.0.1' ||
          host.endsWith('.pages.dev') ||
          search.includes('dev=true')
        );
        if (!isDev) {
          // Hide dev-only elements on production by injecting a style rule
          var style = document.createElement('style');
          style.textContent = '[data-dev-only]{display:none!important}';
          document.head.appendChild(style);
        }
      })();
    </script>

    <!-- Data version for cache busting -->
    <script is:inline set:html={`window.OTOGIDB_DATA_VERSION="${dataVersion}";window.OTOGIDB_DATA_PATHS=${JSON.stringify(dataPaths)};`} />

