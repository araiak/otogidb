---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CardTable from '../../components/cards/CardTable';
import type { CardsData } from '../../types/card';

// Import cards data at build time to get dynamic card count
import cardsDataRaw from '../../data/cards.json';
const cardsData = cardsDataRaw as unknown as CardsData;
const cardCount = Object.keys(cardsData.cards).length;

const currentLocale = 'ja';

// SEO: Localized title and description
const pageTitle = "オトギ: スピリットエージェント データベース - ステータス、スキル、アビリティ";
const pageDescription = `オトギ: スピリットエージェントの完全データベース。${cardCount}体のデーモンのステータス、スキル、アビリティを検索・フィルタリング。`;

// JSON-LD WebSite structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "OtogiDB - オトギ: スピリットエージェント データベース",
  "alternateName": "OtogiDB",
  "url": "https://otogidb.com/ja",
  "description": pageDescription,
  "inLanguage": "ja"
};
---

<BaseLayout title={pageTitle} description={pageDescription} lang={currentLocale}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <div class="container mx-auto px-4 py-6">
    <div class="mb-4 md:mb-6">
      <h1 class="text-lg sm:text-xl md:text-3xl font-bold mb-1 md:mb-2">オトギ: スピリットエージェント データベース</h1>
      <p class="text-secondary text-sm md:text-base hidden sm:block">{cardCount}体のデーモンのステータス、スキル、アビリティを完全網羅。</p>
    </div>

    <!-- Card Table (React Island) -->
    <div class="card p-4">
      <CardTable client:visible />
    </div>
  </div>
</BaseLayout>
