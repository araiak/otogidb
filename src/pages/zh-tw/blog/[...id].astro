---
/**
 * Traditional Chinese Blog Post Page
 */
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import { formatDate } from '../../../lib/formatters';
import { getTranslations } from '../../../lib/translations';
import CardReferencePopups from '../../../components/blog/CardReferencePopups';
import FilteredCardsBlock from '../../../components/blog/FilteredCardsBlock';
import ListBlock from '../../../components/blog/ListBlock';
import TeamBlock from '../../../components/blog/TeamBlock';
import type { CardsData, Card } from '../../../types/card';
import { getImageUrl } from '../../../lib/images';

// Import localized cards data for popups
import cardsDataRaw from '../../../data/zh-tw/cards.json';
import skillsDataRaw from '../../../data/skills.json';

const currentLocale = 'zh-tw';
const t = getTranslations(currentLocale);
const cardsData = cardsDataRaw as unknown as CardsData;
const skillsData = (skillsDataRaw as any).skills || {};

export async function getStaticPaths() {
  // Only get Traditional Chinese posts (now in zh-tw/ subdirectory)
  const posts = await getCollection('blog', ({ id }) => id.startsWith('zh-tw/'));
  return posts.map((post) => ({
    // Use base id (without locale prefix) for URL
    params: { id: post.id.replace(/^zh-tw\//, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const publishedDate = new Date(post.data.date).toISOString();

function getMostReferencedCardId(markdown: string): string | null {
  const cardRefRegex = /:card\[(\d+)\]/g;
  const counts: Record<string, number> = {};
  let match;
  while ((match = cardRefRegex.exec(markdown)) !== null) {
    const id = match[1];
    counts[id] = (counts[id] || 0) + 1;
  }
  let maxCount = 0;
  let mostReferenced: string | null = null;
  for (const [id, count] of Object.entries(counts)) {
    if (count > maxCount) {
      maxCount = count;
      mostReferenced = id;
    }
  }
  return mostReferenced;
}

let socialImage = post.data.image;
if (!socialImage) {
  const mostReferencedCardId = getMostReferencedCardId(post.body);
  if (mostReferencedCardId && cardsData.cards[mostReferencedCardId]) {
    const card = cardsData.cards[mostReferencedCardId] as Card;
    socialImage = getImageUrl(card, 'hd') || undefined;
  }
}

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.data.description,
  "image": socialImage,
  "datePublished": publishedDate,
  "dateModified": publishedDate,
  "inLanguage": currentLocale,
  "author": { "@type": "Person", "name": post.data.author || "OtogiDB Team" },
  "publisher": { "@type": "Organization", "name": "OtogiDB", "url": "https://otogidb.com" },
  "mainEntityOfPage": { "@type": "WebPage", "@id": `https://otogidb.com/${currentLocale}/blog/${post.id.replace(/^zh-tw\//, '')}` },
  "keywords": post.data.tags?.join(", ")
};
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  image={socialImage}
  type="article"
  lang={currentLocale}
  hasLocalizedUrls={true}
  article={{ publishedTime: publishedDate, author: post.data.author, tags: post.data.tags }}
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <script is:inline define:vars={{ currentLocale }}>
    (function() {
      var STORAGE_KEY = 'otogidb-locale';
      var prefix = '/' + currentLocale;
      try { localStorage.setItem(STORAGE_KEY, currentLocale); } catch(e) {}

      function updateCardLinks() {
        document.querySelectorAll('a[href^="/cards/"]').forEach(function(link) {
          var href = link.getAttribute('href');
          if (href) {
            var cardId = href.replace('/cards/', '');
            link.setAttribute('href', prefix + '/cards/' + cardId);
          }
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', updateCardLinks);
      } else {
        updateCardLinks();
      }
    })();
  </script>

  <div class="container mx-auto px-4 py-6">
    <nav class="mb-4 text-sm">
      <a href={`/${currentLocale}/blog`} class="link">{t.blog}</a>
      <span class="mx-2">/</span>
      <span class="text-secondary">{post.data.title}</span>
    </nav>

    <article class="card p-4 md:p-8">
      <!-- Machine Translation Notice -->
      <div class="mb-4 p-3 rounded-lg text-sm" style="background-color: rgba(234, 179, 8, 0.15); border: 1px solid rgba(234, 179, 8, 0.3);">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 flex-shrink-0" style="color: rgb(234, 179, 8);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
          </svg>
          <div>
            <span class="font-medium" style="color: rgb(234, 179, 8);">{t.machineTranslated}</span>
            <span class="text-secondary ml-1">{t.machineTranslatedNote}</span>
          </div>
        </div>
      </div>

      <header class="mb-6 pb-6" style="border-bottom: 1px solid var(--color-border);">
        <h1 class="text-2xl md:text-3xl font-bold mb-2">{post.data.title}</h1>
        <div class="flex flex-wrap items-center gap-4 text-sm text-secondary">
          <time datetime={post.data.date.toString()}>{formatDate(post.data.date.toString())}</time>
          {post.data.author && <span>{t.by} {post.data.author}</span>}
        </div>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-3">
            {post.data.tags.map((tag) => <span class="badge text-xs">{tag}</span>)}
          </div>
        )}
      </header>
      <div class="prose prose-invert max-w-none"><Content /></div>
    </article>

    <CardReferencePopups client:load cards={cardsData.cards} skills={skillsData} />
    <FilteredCardsBlock client:load cards={cardsData.cards} skills={skillsData} />
    <ListBlock client:load cards={cardsData.cards} skills={skillsData} />
    <TeamBlock client:load cards={cardsData.cards} skills={skillsData} />

    <div class="mt-6">
      <a href={`/${currentLocale}/blog`} class="link">&larr; {t.backToBlog}</a>
    </div>
  </div>
</BaseLayout>

<style is:global>
  .prose { line-height: 1.7; }
  .prose h1, .prose h2, .prose h3, .prose h4 { margin-top: 1.5em; margin-bottom: 0.5em; font-weight: bold; }
  .prose h1 { font-size: 1.75rem; }
  .prose h2 { font-size: 1.5rem; }
  .prose h3 { font-size: 1.25rem; }
  .prose p { margin-bottom: 1em; }
  .prose ul, .prose ol { margin-bottom: 1em; padding-left: 1.5em; }
  .prose li { margin-bottom: 0.25em; }
  .prose ul { list-style-type: disc; }
  .prose ol { list-style-type: decimal; }
  .prose a { color: var(--color-accent); text-decoration: underline; }
  .prose a:hover { opacity: 0.8; }
  .prose strong { font-weight: bold; }
  .prose code { background-color: var(--color-surface); padding: 0.125em 0.25em; border-radius: 0.25rem; font-size: 0.875em; }
  .prose pre { background-color: var(--color-surface); padding: 1em; border-radius: 0.5rem; overflow-x: auto; margin-bottom: 1em; }
  .prose pre code { background: none; padding: 0; }
  .prose blockquote { border-left: 3px solid var(--color-accent); padding-left: 1em; margin: 1em 0; font-style: italic; color: var(--color-text-secondary); }
</style>
