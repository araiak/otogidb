---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CardTable from '../../components/cards/CardTable';
import type { CardsData } from '../../types/card';

import cardsDataRaw from '../../data/cards.json';
const cardsData = cardsDataRaw as unknown as CardsData;
const cardCount = Object.keys(cardsData.cards).length;

const currentLocale = 'ko';

const pageTitle = "오토기: 스피릿 에이전트 데이터베이스 - 스탯, 스킬, 어빌리티";
const pageDescription = `오토기: 스피릿 에이전트 완전 데이터베이스. ${cardCount}개 데몬의 스탯, 스킬, 어빌리티 검색 및 필터링.`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "OtogiDB - 오토기: 스피릿 에이전트 데이터베이스",
  "alternateName": "OtogiDB",
  "url": "https://otogidb.com/ko",
  "description": pageDescription,
  "inLanguage": "ko"
};
---

<BaseLayout title={pageTitle} description={pageDescription} lang={currentLocale}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <div class="container mx-auto px-4 py-6">
    <div class="mb-6">
      <h1 class="text-2xl md:text-3xl font-bold mb-2">오토기: 스피릿 에이전트 데이터베이스</h1>
      <p class="text-secondary">{cardCount}개 데몬의 스탯, 스킬, 어빌리티 완전 수록.</p>
    </div>

    <div class="card p-4">
      <CardTable client:visible />
    </div>
  </div>
</BaseLayout>
