---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CardTable from '../../components/cards/CardTable';
import type { CardsData } from '../../types/card';

import cardsDataRaw from '../../data/cards.json';
const cardsData = cardsDataRaw as unknown as CardsData;
const cardCount = Object.keys(cardsData.cards).length;

const currentLocale = 'es';

// Title limit: 60 chars (+ " | OtogiDB" = 70 max), Description limit: 160 chars
const pageTitle = "Otogi: Spirit Agents - Base de Datos de Demonios";
const pageDescription = `Base de datos de Otogi: Spirit Agents con ${cardCount} demonios. Estadísticas, habilidades y capacidades. Filtra por atributo, tipo y rareza.`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "OtogiDB - Base de Datos de Otogi: Spirit Agents",
  "alternateName": "OtogiDB",
  "url": "https://otogidb.com/es",
  "description": pageDescription,
  "inLanguage": "es"
};
---

<BaseLayout title={pageTitle} description={pageDescription} lang={currentLocale}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <div class="container mx-auto px-4 py-6">
    <div class="mb-6">
      <h1 class="text-2xl md:text-3xl font-bold mb-2">Base de Datos de Otogi: Spirit Agents</h1>
      <p class="text-secondary">Estadísticas, habilidades y capacidades completas para los {cardCount} demonios.</p>
    </div>

    <div class="card p-4">
      <CardTable client:visible />
    </div>
  </div>
</BaseLayout>
