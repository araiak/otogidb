---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import TierList from '../../../components/tiers/TierList';

const currentLocale = 'es';

const pageTitle = "Lista de Niveles - Rankings de Cartas";
const pageDescription = "Ver rankings de nivel para todas las cartas de Otogi: Spirit Agents. Filtra por rol, atributo y modo de batalla.";
---

<BaseLayout title={pageTitle} description={pageDescription} lang={currentLocale}>
  <div class="container mx-auto px-4 py-6">
    <div class="mb-4 md:mb-6">
      <div class="flex items-center gap-2 mb-1 md:mb-2">
        <h1 class="text-lg sm:text-xl md:text-3xl font-bold">Lista de Niveles</h1>
        <span class="px-2 py-0.5 text-xs font-semibold bg-blue-500/20 text-blue-400 rounded">BETA</span>
      </div>
      <p class="text-secondary text-sm md:text-base hidden sm:block">
        Rankings de cartas basados en simulaciones de batalla. Filtra por rol, atributo o modo de prueba.
      </p>
    </div>

    <!-- Tier List (React Island) -->
    <TierList client:load />
  </div>
</BaseLayout>
