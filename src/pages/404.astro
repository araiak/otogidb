---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPlaceholderMascot } from '../lib/images';

const mascotUrl = getPlaceholderMascot();

const pageTitle = "Page Not Found";
const pageDescription = "The page you're looking for doesn't exist or has been moved.";
---

<BaseLayout title={pageTitle} description={pageDescription} lang="en">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-lg mx-auto text-center">
      <!-- Mascot image -->
      <div class="mb-8">
        <img
          src={mascotUrl}
          alt="OtogiDB Mascot"
          class="w-32 h-32 mx-auto rounded-full opacity-50"
          loading="eager"
        />
      </div>

      <!-- Error message -->
      <h1 class="text-4xl font-bold mb-4">404</h1>
      <h2 class="text-xl font-semibold mb-4 text-secondary">Page Not Found</h2>
      <p class="text-secondary mb-8">
        The daemon you're looking for has vanished into the spirit realm.
        It may have been moved or doesn't exist.
      </p>

      <!-- Navigation options -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/en/"
          class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium transition-colors"
          style="background-color: var(--color-accent); color: white;"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Go to Homepage
        </a>
        <button
          onclick="history.back()"
          class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium transition-colors border"
          style="border-color: var(--color-border); color: var(--color-text);"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Go Back
        </button>
      </div>

      <!-- Helpful links -->
      <div class="mt-12 pt-8 border-t" style="border-color: var(--color-border);">
        <p class="text-sm text-secondary mb-4">Looking for something specific?</p>
        <div class="flex flex-wrap gap-4 justify-center text-sm">
          <a href="/en/" class="text-accent hover:underline">Browse All Cards</a>
          <span class="text-secondary">•</span>
          <a href="/en/blog" class="text-accent hover:underline">Read Blog</a>
          <span class="text-secondary">•</span>
          <a href="/en/updates" class="text-accent hover:underline">Patch Notes</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
