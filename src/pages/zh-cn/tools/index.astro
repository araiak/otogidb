---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { isFeatureEnabled } from '../../../lib/features';

interface Tool {
  id: string;
  name: string;
  description: string;
  icon: string;
  color: string;
  beta?: boolean;
}

const baseTools: Tool[] = [
  {
    id: 'player-levels',
    name: '玩家等级数据',
    description: '完整的经验值需求、HP/体力值和好友位进度。包含等级查询和XP规划计算器。',
    icon: 'chart',
    color: 'rgb(234, 179, 8)',
  },
];

const devTools: Tool[] = [];

if (isFeatureEnabled('worldBoss')) {
  devTools.push({
    id: 'world-boss',
    name: '世界Boss指南',
    description: '4个世界Boss的技能、属性、HP、防御、技能轮换。',
    icon: 'skull',
    color: 'rgb(239, 68, 68)',
    beta: true,
  });
}

if (isFeatureEnabled('damageCalculator')) {
  devTools.push({
    id: '../calculator',
    name: '伤害计算器',
    description: '构建并优化您的5人团队。配置卡牌、助手、羁绊和技能以最大化伤害输出。',
    icon: 'calculator',
    color: 'rgb(168, 85, 247)',
    beta: true,
  });
}

// Sort: released tools first (alphabetically), then beta tools (alphabetically)
const tools = [...baseTools, ...devTools].sort((a, b) => {
  if (a.beta && !b.beta) return 1;
  if (!a.beta && b.beta) return -1;
  return a.name.localeCompare(b.name);
});

const icons: Record<string, string> = {
  chart: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>`,
  calculator: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>`,
  skull: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.48 2 2 6.48 2 12c0 3.69 2.47 6.86 6 8.25V22h2v-1h4v1h2v-1.75c3.53-1.39 6-4.56 6-8.25 0-5.52-4.48-10-10-10zM8.5 14a1.5 1.5 0 110-3 1.5 1.5 0 010 3zm7 0a1.5 1.5 0 110-3 1.5 1.5 0 010 3z"></path></svg>`,
  wrench: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>`,
};
---

<BaseLayout title="工具" description="御伽Spirit Agents游戏工具和计算器">
  <div class="container mx-auto px-4 py-6">
    <div class="mb-8">
      <h1 class="text-2xl md:text-3xl font-bold mb-2">工具</h1>
      <p class="text-secondary">御伽Spirit Agents的计算器和参考工具。</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {tools.map((tool) => (
        <a
          href={`/zh-cn/tools/${tool.id}`}
          class="card p-6 hover:shadow-lg transition-shadow group"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 p-3 rounded-lg"
              style={`background-color: ${tool.color}20; color: ${tool.color};`}
              set:html={icons[tool.icon] || icons.wrench}
            />
            <div class="flex-1 min-w-0">
              <h2 class="text-lg font-bold mb-2 group-hover:underline">
                {tool.name}
                {tool.beta && (
                  <span class="ml-2 text-xs font-medium px-2 py-0.5 rounded-full bg-amber-500/20 text-amber-400">Beta</span>
                )}
              </h2>
              <p class="text-sm text-secondary">{tool.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>

    {tools.length < 3 && (
      <div class="mt-12">
        <h2 class="text-xl font-bold mb-4 text-secondary">更多工具即将推出</h2>
        <p class="text-secondary text-sm">
          有工具建议吗？在Discord告诉我们！
        </p>
      </div>
    )}
  </div>
</BaseLayout>
