---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CardTable from '../../components/cards/CardTable';
import type { CardsData } from '../../types/card';

import cardsDataRaw from '../../data/cards.json';
const cardsData = cardsDataRaw as unknown as CardsData;
const cardCount = Object.keys(cardsData.cards).length;

const currentLocale = 'zh-cn';

const pageTitle = "御灵士数据库 - 属性、技能、能力";
const pageDescription = `完整的御灵士数据库。搜索和筛选${cardCount}个式神的属性、技能和能力。`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "OtogiDB - 御灵士数据库",
  "alternateName": "OtogiDB",
  "url": "https://otogidb.com/zh-cn",
  "description": pageDescription,
  "inLanguage": "zh-CN"
};
---

<BaseLayout title={pageTitle} description={pageDescription} lang={currentLocale}>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <div class="container mx-auto px-4 py-6">
    <div class="mb-4 md:mb-6">
      <h1 class="text-lg sm:text-xl md:text-3xl font-bold mb-1 md:mb-2">御灵士数据库</h1>
      <p class="text-secondary text-sm md:text-base hidden sm:block">完整收录{cardCount}个式神的属性、技能和能力。</p>
    </div>

    <div class="card p-4">
      <CardTable client:visible />
    </div>
  </div>
</BaseLayout>
