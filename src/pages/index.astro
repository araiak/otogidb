---
/**
 * Root page - redirects to user's preferred locale
 * Uses client-side redirect based on stored preference or browser detection
 */
import { localeInitScript } from '../lib/i18n';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OtogiDB - Redirecting...</title>
    <meta name="robots" content="noindex" />
    <!-- Redirect script runs immediately -->
    <script set:html={localeInitScript} />
    <!-- Fallback for no-JS: redirect to English -->
    <noscript>
      <meta http-equiv="refresh" content="0;url=/en/" />
    </noscript>
  </head>
  <body>
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh; font-family: system-ui, sans-serif;">
      <p>Redirecting...</p>
    </div>
  </body>
</html>
