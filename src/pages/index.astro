---
import BaseLayout from '../layouts/BaseLayout.astro';
import CardTable from '../components/cards/CardTable';
---

<BaseLayout title="Card Database">
  <div class="container mx-auto px-4 py-6">
    <div class="mb-6">
      <h1 class="text-2xl md:text-3xl font-bold mb-2">Otogi Spirit Agents Card Database</h1>
      <p class="text-secondary">Complete card stats, skills, and abilities for all 868 cards.</p>
    </div>

    <!-- Card Table (React Island) -->
    <div class="card p-4">
      <CardTable client:load />
    </div>
  </div>
</BaseLayout>
