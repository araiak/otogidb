---
/**
 * SEO Component - Handles Open Graph, Twitter Cards, and canonical URLs
 */

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  canonical?: string;
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    tags?: string[];
  };
}

const {
  title,
  description,
  image,
  type = 'website',
  canonical,
  article,
} = Astro.props;

const siteUrl = 'https://otogidb.com';
const siteName = 'OtogiDB';

// Default image: Nue (Card #1) HD image from Cloudinary
const defaultImage = 'https://res.cloudinary.com/dn3j8sqcc/image/upload/q_auto,f_auto/otogi/cards_hd/100001_hd.png';
const ogImage = image || defaultImage;

// Canonical URL (current page or specified)
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;

// Full title with site name
const fullTitle = `${title} | ${siteName}`;
---

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="en_US" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<!-- Article-specific Open Graph tags -->
{type === 'article' && article?.publishedTime && (
  <meta property="article:published_time" content={article.publishedTime} />
)}
{type === 'article' && article?.modifiedTime && (
  <meta property="article:modified_time" content={article.modifiedTime} />
)}
{type === 'article' && article?.author && (
  <meta property="article:author" content={article.author} />
)}
{type === 'article' && article?.tags?.map((tag) => (
  <meta property="article:tag" content={tag} />
))}
