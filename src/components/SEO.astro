---
/**
 * SEO Component - Handles Open Graph, Twitter Cards, canonical URLs, and hreflang
 */
import { SUPPORTED_LOCALES, type SupportedLocale, getPathInLocale } from '../lib/i18n';

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  canonical?: string;
  locale?: SupportedLocale;
  /** Set to true for pages with localized URL versions (e.g., card detail pages) */
  hasLocalizedUrls?: boolean;
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    tags?: string[];
  };
}

const {
  title,
  description,
  image,
  type = 'website',
  canonical,
  locale = 'en',
  hasLocalizedUrls = false,
  article,
} = Astro.props;

const siteUrl = 'https://otogidb.com';
const siteName = 'OtogiDB';

// Default image: Nue (Card #1) HD image from Cloudinary
const defaultImage = 'https://res.cloudinary.com/dn3j8sqcc/image/upload/q_auto,f_auto/otogi/cards_hd/100001_hd.png';
const ogImage = image || defaultImage;

// Canonical URL (current page or specified)
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;

// Full title with site name
const fullTitle = `${title} | ${siteName}`;

// Map locale codes to OG locale format
const OG_LOCALE_MAP: Record<SupportedLocale, string> = {
  'en': 'en_US',
  'ja': 'ja_JP',
  'ko': 'ko_KR',
  'zh-cn': 'zh_CN',
  'zh-tw': 'zh_TW',
  'es': 'es_ES',
};

// Map locale codes to hreflang format
const HREFLANG_MAP: Record<SupportedLocale, string> = {
  'en': 'en',
  'ja': 'ja',
  'ko': 'ko',
  'zh-cn': 'zh-Hans',
  'zh-tw': 'zh-Hant',
  'es': 'es',
};

const ogLocale = OG_LOCALE_MAP[locale] || 'en_US';

// Generate hreflang URLs for pages with localized versions
const hreflangUrls = hasLocalizedUrls
  ? SUPPORTED_LOCALES.map(loc => ({
      locale: loc,
      hreflang: HREFLANG_MAP[loc],
      url: new URL(getPathInLocale(Astro.url.pathname, loc), siteUrl).href,
    }))
  : [];
---

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Hreflang tags for localized pages -->
{hasLocalizedUrls && hreflangUrls.map(({ hreflang, url }) => (
  <link rel="alternate" hreflang={hreflang} href={url} />
))}
{hasLocalizedUrls && (
  <link rel="alternate" hreflang="x-default" href={new URL(getPathInLocale(Astro.url.pathname, 'en'), siteUrl).href} />
)}

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content={ogLocale} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<!-- Article-specific Open Graph tags -->
{type === 'article' && article?.publishedTime && (
  <meta property="article:published_time" content={article.publishedTime} />
)}
{type === 'article' && article?.modifiedTime && (
  <meta property="article:modified_time" content={article.modifiedTime} />
)}
{type === 'article' && article?.author && (
  <meta property="article:author" content={article.author} />
)}
{type === 'article' && article?.tags?.map((tag) => (
  <meta property="article:tag" content={tag} />
))}
